{% if appointments.length %}
  {% for appointment in appointments %}
    <li class="provider">
      <div>
        <img src="/files/{{ appointment.user.avatar }}" height="42" />
        <strong>{{ appointment.user.name }} <br> {{ appointment.date | date("HH:mm") }}</strong>
      </div>
    </li>
  {% endfor %}

{% else %}
  <p>Não há agendamentos</p>
{% endif %}
